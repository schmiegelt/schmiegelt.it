{
  "name": "React",
  "build": {
    "dockerfile": "Dockerfile"
  },

  "workspaceFolder": "/workspaces/schmiegelt.it",

  "portsAttributes": {
    "4321": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "mounts": [
    "source=${devcontainerId}-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
	],

  "forwardPorts": [4321],

  "postCreateCommand": "pnpm install && cd /workspaces/schmiegelt.it && pnpm run build",

  "waitFor": "postCreateCommand",

  "postAttachCommand": {
    "Server": "pnpm start --host"
  },
  "containerEnv": {
    "CHOKIDAR_USEPOLLING": "true"
  },

  "customizations": {
    "codespaces": {
      "openFiles": ["src/pages/index.astro"]
    },
    "vscode": {
      "extensions": ["astro-build.astro-vscode", "esbenp.prettier-vscode"]
    }
  }
}