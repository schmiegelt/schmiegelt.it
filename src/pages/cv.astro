---
import Layout from "@/layouts/Layout.astro";

import About from "@/components/cv/sections/About.astro";
import Education from "@/components/cv/sections/Education.astro";
import Experience from "@/components/cv/sections/Experience.astro";
import Hero from "@/components/cv/sections/Hero.astro";
import Projects from "@/components/cv/sections/Projects.astro";
import Skills from "@/components/cv/sections/Skills.astro";
import Languages from "@/components/cv/sections/Languages.astro";
import Tail from "@/components/cv/sections/Tail.astro";
import KeyboardManager from "@/components/cv/KeyboardManager.astro";
import ThemeSwitch from "@/components/cv/ThemeSwitch.astro";

import { basics } from "@cv";
const { name, label } = basics;
---

<Layout title={`${name} Portafolio - ${label}`}>
	<main class="relative grid max-w-7xl gap-12 p-8 max-sm:py-16 md:grid-cols-6 md:p-16 xl:gap-24 print:max-w-none print:grid-cols-1 print:gap-6">
		<div class="space-y-6 md:col-span-2 print:col-span-1 print:grid print:grid-cols-2 print:gap-5 print:space-y-0">
			<Hero />
			<About />
			<ThemeSwitch />
		</div>
		<div class="space-y-12 md:col-span-4 print:col-span-1 print:grid print:grid-cols-4 print:gap-2 print:space-y-0">
			<Experience className="print:col-span-3" />
			<Projects className="print:hidden" />
			<Skills className="print:hidden" />
			<Education className="order-first" />
			<Languages className="print:col-span-3" />
		</div>
		<Tail />
	</main>

	<KeyboardManager />
</Layout>

<style>
	@page {
		size: auto;
		margin: 0mm;
	}
	main {
		margin: auto;
		width: 100%;
	}
</style>
